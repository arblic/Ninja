<Window x:Name="NinjaMainWindow" x:Class="Ninja.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ninja"
        mc:Ignorable="d"
        Title="Ninja" Height="350" Width="525" Loaded="NinjaMainWindow_Loaded">
    <Grid>
        <ScrollViewer x:Name="ExecLogScroll" Margin="10,60,10,10" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="ExecLog" Text="" FontFamily="Consolas" IsReadOnly="True" Background="Black" Foreground="Lime" AcceptsTab="True"/>
        </ScrollViewer>

    </Grid>
</Window>
